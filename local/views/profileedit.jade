extends layout

block content
  nav.white(role='navigation')
      .nav-wrapper.container
        a#logo-container.brand-logo(href='/') Wiki
        if(!user)
          ul.right.hide-on-med-and-down
            li
              a(href='/login') Login
            li
              a(href='/register') Register
          ul#nav-mobile.side-nav
            li
              a(href='/login') Login
            li
              a(href='/register') Register
          a.button-collapse(href='#', data-activates='nav-mobile')
            i.material-icons menu
        if(user)    
          ul.right.hide-on-med-and-down
            li
              a(href="/profile") Welcome, #{user.username}
            li
              a(href="/logout") Logout
          ul#nav-mobile.side-nav
            li
              a(href='/profile') Welcome, #{user.username}
            li
              a(href='/logout') Logout
          a.button-collapse(href='#', data-activates='nav-mobile')
            i.material-icons menu
  .log
      .container
        h1 Edit Profile - #{user.username}
        br
        .row
            form(role='form', action="/editprofile",method="post", style='max-width: 300px;').col.s12
              .row
                .input-field.col.s6
                  input#email.validate(type='email', name="email",value="#{user.email}")
                  label(for='email') Email
              .row
                .input-field.col.s12
                  input#password.validate(type='password', name="password")
                  label(for='password') Password
              .row
                button.btn.waves-effect.waves-light(type='submit', name='action')
                  | Save Changes
                a(href='/')
                  button.btn.waves-effect.waves-light(type="button") Cancel
      
  