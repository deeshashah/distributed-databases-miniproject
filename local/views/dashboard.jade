extends layout

block content
  nav.white(role='navigation')
      .nav-wrapper.container
        a#logo-container.brand-logo(href='/') Wiki
        if(!user)
          ul.right.hide-on-med-and-down
            li
              a(href='/login') Login
            li
              a(href='/register') Register
          ul#nav-mobile.side-nav
            li
              a(href='/login') Login
            li
              a(href='/register') Register
          a.button-collapse(href='#', data-activates='nav-mobile')
            i.material-icons menu
        if(user)    
          ul.right.hide-on-med-and-down
            li
              a(href="/profile") Welcome, #{user.username}
            li
              a(href="/logout") Logout
          ul#nav-mobile.side-nav
            li
              a(href='/profile') Welcome, #{user.username}
            li
              a(href='/logout') Logout
          a.button-collapse(href='#', data-activates='nav-mobile')
            i.material-icons menu
  .log
        .container
          #searchContainer
            .row
              form(name="searchForm",action="/input",method="post").col.s12
                .row
                  .input-field.col.s12
                    i.material-icons.prefix search
                    input#icon_prefix.validate(type='text' name='inputText')
                    label(for='icon_prefix') Search Here

  

  